// Vectores.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
void LEER_VEC(int*A, int n);
int SUMAR_VEC(int*A,int n);
#define NMAX 100
int main(void)
{ int n, A[NMAX],i, R;
  printf("\n tama√±o del vector:");
  scanf("%d",&n);
  LEER_VEC(A,n);
  R=SUMAR_VEC(A,n);

  printf("\n La suma es: %d", R);
  return 0;
}

void LEER_VEC(int*A, int n)
{int i;
  for(i=0;i<n;i++)
  {scanf("%d", &A[i]);}
}

int SUMAR_VEC(int*A,int n)
{int S,i;
 S=0;
 for(i=0;i<n;i++)
 { S=S+A[i];}
 return S;
}
